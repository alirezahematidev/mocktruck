{
  "name": "mocktruck",
  "version": "0.0.1",
  "description": "Locally mock CRUD apis",
  "main": "bin/index.js",
  "scripts": {
    "start": "node bin/index.js",
    "start:rs": "cd ./src/externals && cargo run lib.rs",
    "build:rs": "cd ./src/externals && cargo build --release",
    "build:wasm": "cd ./src/externals && yarn test:wasm && wasm-pack build --target nodejs --out-name index",
    "build": "rimraf lib && yarn compile && webpack --mode=production --node-env=production",
    "build:dev": "rimraf lib && yarn compile && webpack --mode=development",
    "build:prod": "rimraf lib && yarn compile && webpack --mode=production --node-env=production",
    "watch": "webpack --watch",
    "compile": "tsc -b",
    "test": "yarn compile && jest",
    "test:wasm": "cd ./src/externals && cargo test"
  },
  "files": [
    "bin",
    "src"
  ],
  "keywords": [
    "mock",
    "api",
    "server",
    "crud"
  ],
  "author": "Alireza Hemati",
  "license": "MIT",
  "bin": {
    "mocktruck": "./bin/index.js"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@types/configstore": "^6.0.0",
    "@types/ffi-napi": "^4.0.7",
    "@types/jest": "^29.4.0",
    "@types/prettier": "^2.7.2",
    "@types/serialize-javascript": "^5.0.2",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "@webpack-cli/generators": "^3.0.1",
    "babel-jest": "^29.4.1",
    "boxen": "^7.0.1",
    "chalk": "^5.2.0",
    "configstore": "^6.0.0",
    "ffi-napi": "^4.0.3",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.4.1",
    "jest-config": "^29.4.1",
    "prettier": "^2.8.3",
    "prettier-plugin-jsdoc": "^0.4.2",
    "rimraf": "^4.1.2",
    "serialize-javascript": "^6.0.1",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "yargs": "^17.6.2"
  },
  "dependencies": {
    "axios": "^1.2.3",
    "express": "^4.18.2"
  }
}
