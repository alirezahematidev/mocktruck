{
  "compilerOptions": {
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "lib": ["dom", "dom.iterable", "ESNext"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "truck:contents": ["./contents/index.ts"],
      "truck:requests": ["./requests/index.ts"]
    }
  },
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "target": "es6"
    }
  },
  "include": ["src", "src/typings.d.ts", "contents", "requests", "cli"],
  "exclude": ["node_modules", "lib"]
}
