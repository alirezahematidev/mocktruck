{
  "compilerOptions": {
    "moduleResolution": "node",
    "lib": ["dom", "dom.iterable", "ESNext"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": true
  },
  "include": ["src", "src/typings.d.ts"],
  "exclude": ["node_modules", "lib"]
}
