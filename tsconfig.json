{
  "compilerOptions": {
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "lib": ["dom", "dom.iterable", "esnext"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "esnext",
    "allowJs": true,
    "typeRoots": ["node_modules/@types", "jest"],
    "types": ["node"]
  },
  "ts-node": {
    "esm": true,
    "require": ["tsconfig-paths/register"]
  },
  "include": ["src", "src/typings.d.ts", "*.mts"],
  "exclude": ["node_modules", "lib", "bin", "out"]
}
